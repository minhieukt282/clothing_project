                                <a href="/product/branch/japan"><i class="fa fa-angle-right"></i> Japan </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="sidebar-products clearfix">
                    <h2>Best sellers</h2>
                    <% for( item of bestProduct){ %>
                        <div class="item">
                            <a href="/product/details/<%= item.product_id %>"><img src="<%= item.image %>" alt=""></a>
                            <h3><a href="/product/details/<%= item.product_id %>"><%= item.product_name %></a></h3>
                            <div class="price">$<%= item.price %></div>
                        </div>
                    <% } %>
                </div>
            </div>
            <!-- END SIDEBAR -->

            <!-- BEGIN CONTENT -->
            <div class="col-md-9 col-sm-7">
                <div class="product-page">
                    <div class="row">
                        <form action="/update/<%= products[0].product_id %>" class="reviews-form" method="post"
                              enctype="multipart/form-data">
                            <div class="col-md-6 col-sm-6">
                                <div class="product-main-image">
                                    <img src="<%= products[0].image %>" alt=""
                                         class="img-responsive" data-BigImgsrc="assets/pages/img/products/model7.jpg">
                                    <input type="file" name="image" value="" required>
                                </div>
                                <div class="product-other-images">
                                    <a href="" class="fancybox-button" rel="photos-lib"><img
                                                alt="" src=""></a>
                                </div>
                                <div class="padding-top-20">
                                    <button type="submit" class="btn btn-primary">Update Image</button>
                                </div>
                            </div>
                        </form>
                        <form action="/update/<%= products[0].product_id %>" class="reviews-form" method="post">
                            <div class="col-md-6 col-sm-6">
                                <h1><%= products[0].product_name %></h1>
                                <h1><input type="text" class="form-control" name="product_name" required
                                           value="<%= products[0].product_name %>"></h1>
                                <div class="price-availability-block clearfix">
                                    <div class="price">
                                        <strong><span>$</span><%= products[0].price %></strong>
                                        <input type="number" class="form-control" name="price" required min="1"
                                               value="<%= products[0].price %>">
                                    </div>
                                    <div class="availability">
                                        Availability: <strong>In Stock</strong>
                                    </div>
                                </div>
                                <div class="description">
                                    <p><%= products[0].description %></p>
                                    <input type="text" class="form-control" name="description" required
                                           value="<%= products[0].description %>">
                                </div>
                                <div class="padding-top-20">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </form>
                        <!-- END FORM-->
                        <!--                        <div class="sticker sticker-sale"></div>-->
                    </div>
                </div>
            </div>
            <!-- END CONTENT -->
        </div>
        <!-- END SIDEBAR & CONTENT -->
    </div>
</div>
